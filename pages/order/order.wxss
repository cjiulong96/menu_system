/* pages/order/order.wxss */
.item-wrap {
  display: flex;
  margin: 20rpx;
}
.item-wrap .item-right {
  flex: 1;
}

.item-wrap .item-right .btn {
  width: 50rpx;
  height: 50rpx;
}
.item-wrap .item-right .count {
  margin: 0 10rpx;
}
.item-wrap .item-img {
  margin: 0 20rpx 0 0;
}
.item-wrap .item-img image {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 8rpx;
}
.item-wrap .item-right .item-content {
  flex: 1;
  height: 200rpx;
}
.item-wrap .item-title {
  font-size: 34rpx;
  font-weight: 700;
}
.item-wrap .item-price {
  font-size: 34rpx;
  font-weight: 700;
}
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 0 0 20rpx;
  height: 100rpx;
}

.tabbar .btn-box {
  padding: 0 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-left: 40rpx;
  background-color: orangered;
  color: #fff;
}
.tabbar .total {
  color: #666;
}
.tabbar .totalPrice {
  font-size: 40rpx;
}
.add-address {
  border-bottom: 1rpx solid #eee;
  padding: 30rpx 40rpx;
}

.tableNumber {
  margin: 20rpx;
  font-size: 34rpx;
  font-weight: 700;
}
.order-info {
  margin-left: 20rpx;
}

.remark {
  margin: 20rpx;
}
.remark .remark-title {
  padding-bottom: 10rpx;
}
.remark input {
  border: 1px solid #eee;
  padding: 20rpx;
}