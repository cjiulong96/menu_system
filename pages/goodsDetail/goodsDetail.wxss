/* pages/goodsDetail/goodsDetail.wxss */
.image-cover {
  width: 100%;
  height: 500rpx;
  display: block;
}

.detail-price-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
}

.price {
  font-weight: 700;
  font-size: 40rpx;
}

.sales {
  font-size: 28rpx;
  color: #999;
}

.title-wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 4rpx solid #eee;
  margin: 10rpx 20rpx;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}

.title-wrap button {
  background-color: #fff;
  margin: 0;
  padding: 0;
  /* font-size: 28rpx; */
}

.share-icon {
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.title {
  max-width: 600rpx;
  font-weight: 700;
  font-size: 36rpx;
}

.goods-de {
  margin: 20rpx;
}

.goods-de .de-title {
  font-weight: 600;
  margin-bottom: 20rpx;
}

.goods-de .de-content {
  font-size: 28rpx;
}

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #eee;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 0 20rpx;
}

.cart-image {
  position: relative;
}

.cart-image .cartNum {
  position: absolute;
  top: -10rpx;
  right: 0rpx;
  transform: translateX(50%);
  font-size: 24rpx;
  border-radius: 50%;
  color: #fff;
  width: 36rpx; 
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
}

.cart-image image {
  width: 70rpx;
  height: 70rpx;
  display: block;
}
.collect {
  margin: 0 20rpx;
}
.cart-btns {
  display: flex;
  align-items: center;
}

.cart-btns .cart-btn {
  padding: 0rpx 40rpx;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
}

.cart-btns .cart-add {
  background-color: orange;
}

.cart-btns .cart-buy {
  background-color: orangered;
}