/* pages/cart/index.wxss */
.item-wrap {
  display: flex;
  margin: 30rpx 20rpx;
}
.item-wrap .item-right {
  flex: 1;
}

.item-wrap .item-right .btn {
  width: 50rpx;
  height: 50rpx;
  display: block;
}
.item-wrap .item-right .count {
  margin: 0 10rpx;
}
.item-wrap .item-img {
  margin: 0 20rpx 0 20rpx;
}
.item-wrap .item-img image {
  width: 200rpx;
  height: 200rpx;
  display: block;
  border-radius: 8rpx;
}
.item-wrap .item-right .item-content {
  flex: 1;
  height: 200rpx;
}
.item-title {
  font-size: 34rpx;
  font-weight: 700;
  padding-bottom: 70rpx;
}
.item-price {
  font-size: 34rpx;
  font-weight: 700;
  width: 200rpx;
}

.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: 0 0 0 20rpx;
  height: 100rpx;
}

.tabbar .btn-box {
  padding: 0 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-left: 40rpx;
  background-color: orangered;
  color: #fff;
}
.tabbar .totalPrice {
  font-size: 34rpx;
  font-weight: 700;
}
.empty {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}