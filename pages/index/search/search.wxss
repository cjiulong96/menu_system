/* pages/index/search/search.wxss */
.search-box {
  /* margin: 0 20rpx; */
  /* padding: 0 20rpx; */
  /* border: 1rpx solid #f7f7f7; */
  /* border-radius: 20rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.search-box::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 0;
  right: 0;
  background-color: orangered;
  height: 10rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.search-input {
  padding: 20rpx 120rpx 20rpx 76rpx;
  margin: 20rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.search-input-placeholder {
  font-size: 30rpx;
}
.search-image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 40rpx;
}

.search-btn {
  position: absolute;
  right: 30rpx;
  padding: 20rpx 20rpx 20rpx 30rpx;
  color: rgba(51, 51, 51, 0.8);
  font-size: 30rpx;
}

.search-btn::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  margin-top: 2rpx;
  height: 30rpx;
  width: 4rpx;
  background-color: rgba(51, 51, 51, 0.1);
}

.goods {
  margin: 40rpx 20rpx;
}
.goods-item {
  display: flex;
  margin-bottom: 16rpx;
}
.item-right {
  flex: 1;
  margin-left: 10rpx;
}
.goods-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  display: block;
}

.goods-title {
  font-size: 34rpx;
  font-weight: 700;
  margin: 8rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 330rpx;
}
.goods-sale {
  color: #999;
  font-size: 28rpx;
}
.goods-bottom {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 10rpx 30rpx 10rpx;
  font-size: 30rpx;
}

.goods-price {
  font-weight: 700;
  font-size: 34rpx;
}

.empty {
  text-align: center;
  margin: 200rpx auto;
}